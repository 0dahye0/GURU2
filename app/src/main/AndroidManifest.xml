<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guru2">

    <uses-feature
        android:name="android.hardware.Sensor.stepcounter"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.Sensor.stepdetector"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GURU2">
        <activity android:name=".InformationModiPage"></activity>
        <activity android:name=".MyPage" />
        <activity android:name=".StepCounter" />
        <activity android:name=".GroupInfo" />
        <activity android:name=".GroupShow" />
        <activity android:name=".GroupMaking" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>